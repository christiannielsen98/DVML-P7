@prefix ex: <http://example.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix weso-s: <http://weso.es/shapes/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

weso-s:Person a sh:NodeShape ;
    sh:property [ a sh:PropertyShape ;
            sh:in ( ex:Person ) ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path rdf:type ],
        [ a sh:PropertyShape ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:node weso-s:Gender ;
            sh:path ex:gender ],
        [ a sh:PropertyShape ;
            sh:maxCount 1 ;
            sh:nodeKind sh:IRI ;
            sh:path ex:brother ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:int ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path ex:age ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:string ;
            sh:maxCount 1 ;
            sh:path ex:surname ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path ex:name ],
        [ a sh:PropertyShape ;
            sh:maxCount 1 ;
            sh:nodeKind sh:IRI ;
            sh:path ex:occupation ] ;
    sh:targetClass ex:Person .

weso-s:Gender a sh:NodeShape ;
    sh:property [ a sh:PropertyShape ;
            sh:dataType xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path rdfs:label ],
        [ a sh:PropertyShape ;
            sh:in ( ex:Gender ) ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path rdf:type ] ;
    sh:targetClass ex:Gender .

