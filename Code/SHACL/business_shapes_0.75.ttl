@prefix : <http://weso.es/shapes/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <https://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix yont: <https://purl.archive.org/purl/yelp/ontology#> .

:LocalBusiness a sh:NodeShape ;
    sh:property [ a sh:PropertyShape ;
            sh:dataType xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path schema:legalName ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:integer ;
            sh:maxCount 1 ;
            sh:path yont:BusinessAcceptsCreditCards ],
        [ a sh:PropertyShape ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:nodeKind sh:IRI ;
            sh:path schema:url ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path yont:locatedInCity ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:decimal ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path schema:longitude ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:decimal ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path schema:aggregateRating ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:integer ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path schema:reviewCount ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path schema:address ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path schema:postalCode ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path yont:locatedInState ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path schema:publicAccess ],
        [ a sh:PropertyShape ;
            sh:in ( schema:LocalBusiness ) ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path rdfs:Class ],
        [ a sh:PropertyShape ;
            sh:dataType xsd:decimal ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path schema:latitude ],
        [ a sh:PropertyShape ;
            sh:maxCount 1 ;
            sh:nodeKind sh:IRI ;
            sh:path yont:hasHours ],
        [ a sh:PropertyShape ;
            sh:nodeKind sh:IRI ;
            sh:path schema:category ] ;
    sh:targetClass schema:LocalBusiness .

